<Page x:Class="LankaretailERP.View.Pages.Home.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LankaretailERP.View.Pages.Home"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/img/Background/mooncomback.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Bottom" Grid.Row="0"  HorizontalAlignment="Center">
            <TextBlock Text="Lankaretail" FontSize="48" Foreground="#FF0D2B88" FontFamily="Eras ITC" HorizontalAlignment="left" Margin="10,10,0,0"></TextBlock>
            <TextBlock Text="Your Premium Retail Partner" FontSize="24" Foreground="#FF163082" FontFamily="Eras ITC" HorizontalAlignment="left"  Margin="10,0,0,0"/>
        </StackPanel>

        <hc:SearchBar  Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="15,50,0,0" Width="300"  hc:InfoElement.Placeholder="Search or Type Something Here to get started" hc:InfoElement.Necessary="True" Style="{StaticResource SearchBarExtend}"/>

        <hc:RunningBlock Grid.Row="2" Grid.ColumnSpan="2" x:Name="Runner" Duration="00:00:30">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="Black" Margin="25,0,0,0">Welcome to LankaRetail, Your Premium Retail Partner in Sri lanka</TextBlock>
                <TextBlock Foreground="Black" Margin="50,0,0,0">Global stock markets see mixed trends as investors eye inflation data and interest rate decisions</TextBlock>
                <TextBlock Foreground="Black" Margin="50,0,0,0">Central Bank maintains key interest rate at 9% to control inflation and boost growth</TextBlock>
                <TextBlock Foreground="Black" Margin="50,0,0,0">USD/LKR stabilizes at 325.50 as forex reserves improve in Sri Lanka</TextBlock>
            </StackPanel>



        </hc:RunningBlock>
    </Grid>
</Page>
