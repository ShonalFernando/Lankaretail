<UserControl x:Class="LankaretailERP.Views.Controls.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LankaretailERP.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="stackPanel" Grid.Row="1" Grid.ColumnSpan="2" Margin="15,15,0,0" Visibility="Visible">
        <TextBlock Text="Your Email" Foreground="#FF66A1F1" FontSize="14"/>
        <TextBox Margin="0,5,10,0" Background="{x:Null}" CaretBrush="#FF73ABF7" SelectionBrush="#FFCC9CCC" Foreground="#FFB9CFFA">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#00000000" Offset="0.903"/>
                    <GradientStop Color="#FF2D80E8" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <TextBlock Text="Password" Foreground="#FF66A1F1" FontSize="14" Margin="0,10,0,0"/>
        <PasswordBox Margin="0,5,10,0" Background="{x:Null}" CaretBrush="#FF73ABF7" SelectionBrush="#FFCC9CCC" Foreground="#FFB9CFFA">
            <PasswordBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#00000000" Offset="0.903"/>
                    <GradientStop Color="#FF2D80E8" Offset="1"/>
                </LinearGradientBrush>
            </PasswordBox.BorderBrush>
        </PasswordBox>
        <TextBlock Text="Re-Enter Password" Foreground="#FF66A1F1" FontSize="14" Margin="0,10,0,0"/>
        <PasswordBox Margin="0,5,10,0" Background="{x:Null}" CaretBrush="#FF73ABF7" SelectionBrush="#FFCC9CCC" Foreground="#FFB9CFFA">
            <PasswordBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#00000000" Offset="0.903"/>
                    <GradientStop Color="#FF2D80E8" Offset="1"/>
                </LinearGradientBrush>
            </PasswordBox.BorderBrush>
        </PasswordBox>
        <Button Content="Sign In" Margin="0,10,0,0" Width="250" BorderBrush="{x:Null}" Foreground="#FFEDEDED">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4189E4" Offset="0"/>
                    <GradientStop Color="#FF2A77D8" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </StackPanel>
</UserControl>
